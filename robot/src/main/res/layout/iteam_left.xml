<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_iteam_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_iteam_right"
        android:layout_marginRight="70dp"
        android:layout_toEndOf="@+id/iv_iteam_right"
        android:layout_toRightOf="@+id/iv_iteam_right"
        android:background="@drawable/left"
        android:text="TextView" />

    <ImageView
        android:id="@+id/iv_iteam_right"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:src="@drawable/a85" />
    
</RelativeLayout>